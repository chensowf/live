

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="cn.mz.live.fragment.LiveHomeFragment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/blue">

            <cn.bingoogolapple.imageview.BGAImageView
                android:id="@+id/home_user_ico"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:bga_iv_isCircle="true"
                android:layout_marginLeft="10dp"
               android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_logo"/>

            <com.flyco.tablayout.SegmentTabLayout
                android:id="@+id/home_tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                app:tl_bar_color="@color/blue"
                app:tl_indicator_color="#FFFF"
                app:tl_textUnselectColor="#FFFF"
                app:tl_textSelectColor="@color/blue"
                app:tl_tab_width="80dp"
                app:tl_textBold="BOTH"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>




        <cn.mz.live.widget.NoScrollViewPager
            android:id="@+id/home_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


